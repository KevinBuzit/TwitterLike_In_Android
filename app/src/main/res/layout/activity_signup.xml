<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.buzit.twitterlike.SignupActivity">

    <EditText
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pwd_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/login_txt"
        android:layout_alignStart="@+id/login_txt" />

    <EditText
        android:id="@+id/url_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="url photo"
        android:inputType="textUri"
        android:layout_below="@+id/pwd_txt"
        android:layout_alignStart="@+id/pwd_txt" />

    <Button
        android:id="@+id/inscription_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/url_txt"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/url_txt"
        android:layout_marginBottom="52dp"
        android:text="Inscription" />
</RelativeLayout>
